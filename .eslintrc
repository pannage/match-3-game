{
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/prefer-stateless-function": "off",
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "comma-dangle": "off",
        "jsx-a11y/no-static-element-interactions": "off",
        "max-len": [
            "error",
            140
        ],
        "curly": ["error", "all"],
        "lines-between-class-members": ["error", "always"],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": ["block-like", "import"],
                "next": "*"
            },
            {
                "blankLine": "always",
                "prev": "*",
                "next": [
                    "block",
                    "block-like",
                    "class",
                    "export",
                    "expression",
                    "return",
                    "throw"
                ]
            },
        {
            "blankLine": "never",
            "prev": "*",
            "next": ["case", "default"]
        },
        {
            "blankLine": "never",
            "prev": "import",
            "next": "import"
        },
        {
            "blankLine": "always",
            "prev": "const",
            "next": "let"
        },
        {
            "blankLine": "always",
            "prev": "let",
            "next": "const"
        },
        {
            "blankLine": "any",
            "prev": "expression",
            "next": "expression"
        }
    ]
    }
}
